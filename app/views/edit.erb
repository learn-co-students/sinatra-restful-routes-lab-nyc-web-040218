<h1>Editing <%= @recipe.name %></h1>
<form action="/recipes/<%= @recipe.id %>" method="POST">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <input id="hidden" type="hidden" name="id" value="<%= @recipe.id %>">
  <p>
    <label id="recipe_name">Recipe Name: </label>
    <input type="text" id="recipe_name" name="name" value="<%= @recipe.name %>">
  </p>
  <p>
    <label id="recipe_ingredients">Recipe Ingredients: </label><br>
    <input type="text" id="recipe_ingredients" name="ingredients" value="<%= @recipe.ingredients %>">
  </p>
  <p>
    <label id="cook_time">Cook Time (mins): </label><br>
    <input type="number" id="cook_time" name="cook_time" value="<%= @recipe.cook_time %>">
  </p>
  <button id="submit">Submit</button>
</form>
